from dataclasses import dataclass
from typing import List

@dataclass
class User:
    name: str
    email: str
    age: int
    
    def is_adult(self) -> bool:
        return self.age >= 18
    
    @property
    def display_name(self) -> str:
        return f"{self.name} ({self.age})"

def filter_adults(users: List[User]) -> List[User]:
    return [user for user in users if user.is_adult()]

view UserList(users: List[User]):
    adults = filter_adults(users)
    
    <div>
        <h1>User Management</h1>
        <p>Total users: {len(users)}, Adults: {len(adults)}</p>
        
        <h2>All Users</h2>
        for user in users:
            <div class={f"user {'adult' if user.is_adult() else 'minor'}"}>
                <h3>{user.display_name}</h3>
                <p>Email: {user.email}</p>
                <p>Status: {"Adult" if user.is_adult() else "Minor"}</p>
            </div>
    </div>