view Card():
    <div class="card">
        <div class="card-header">
            <slot name="header">
                <h4>Default Header</h4>
            </slot>
        </div>
        <div class="card-body">
            <slot />
        </div>
        <div class="card-footer">
            <slot name="footer" />
        </div>
    </div>

view App():
    <Card>
        <template slot="header">
            <h2>Complex Header</h2>
            <p>With subtitle</p>
        </template>
        
        <p>Main content</p>
        <p>More content</p>
        
        <template slot="footer">
            <button>Save</button>
            <button>Cancel</button>
        </template>
    </Card>