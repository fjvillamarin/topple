view StringInterpolation(user_name: str, balance: float):
    greeting = f"Hello, {user_name}!"
    
    <div>
        <h1>{user_name.upper()}</h1>
        <p>Welcome back, {user_name}!</p>
        <p>Your balance is ${balance:.2f}</p>
        <p>Formatted: {user_name} has ${balance:,.2f}</p>
        <p>{len(user_name)} characters in your name</p>
    </div>