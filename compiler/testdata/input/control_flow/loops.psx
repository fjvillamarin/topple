view LoopView(items: list, max_count: int = 10):
    <div>
        <h2>Items List</h2>
        <ul>
            for i, item in enumerate(items):
                if i >= max_count:
                    break
                <li>
                    <span>{i + 1}. {item}</span>
                    if i % 2 == 0:
                        <span class="even">Even</span>
                </li>
        </ul>
        
        counter = 0
        while counter < 3:
            <p>Counter: {counter}</p>
            counter += 1
    </div>